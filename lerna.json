{
    "packages": [
        "packages/*",
        "e2e"
    ],
    "command": {
        "bootstrap": {
            "forceLocal": true,
            "npmClientArgs": [
                "--no-progress",
                "--frozen-lockfile"
            ]
        },
        "publish": {
            "npmClient": "npm"
        },
        "run": {
            "ignore": "teraslice-e2e"
        }
    },
    "sort": true,
    "loglevel": "warn",
    "reject-cycles": true,
    "npmClient": "yarn",
    "useWorkspaces": true,
    "version": "independent"
}

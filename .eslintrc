{
    "extends": "airbnb",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "script",
    },
    "env": {
        "node": true
    },
    "rules": {
        "no-underscore-dangle": "off",
        "indent": ["error", 4],
        "no-param-reassign": ["error", { "props": false }],
        "no-use-before-define": ["error", { "functions": false }],
        "import/no-dynamic-require": "off",
        "global-require": "off",
        "strict": ["error", "global"],
        "comma-dangle": "off"
    }
}

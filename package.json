{
    "name": "teraslice-workspace",
    "private": true,
    "scripts": {
        "start": "node service.js",
        "setup": "lerna bootstrap --force-local && yarn build",
        "cleanup": "./scripts/cleanup.sh",
        "build": "lerna run build:prepare && tsc --build --pretty",
        "build:pkg": "./scripts/build-pkg.sh",
        "build:watch": "yarn run build --watch",
        "benchmark": "lerna run --concurrency=1 --no-prefix --stream benchmark",
        "docs:update": "./scripts/update-docs.sh",
        "bump": "./scripts/bump.js",
        "test": "jest --silent --detectOpenHandles --forceExit",
        "test:debug": "jest --colors --coverage=false --detectOpenHandles --runInBand  --forceExit $JEST_ARGS",
        "test:watch": "jest --coverage=false --notify --onlyChanged --watch",
        "test:e2e": "yarn --cwd ./e2e test",
        "test:e2e:ci": "yarn --cwd ./e2e test:ci",
        "test:e2e:clean": "yarn --cwd ./e2e clean",
        "test:e2e:logs": "yarn --cwd ./e2e logs",
        "lint": "env FORCE_COLOR=1 lerna run lint",
        "lint:fix": "env FORCE_COLOR=1 lerna run lint:fix"
    },
    "dependencies": {},
    "devDependencies": {
        "@types/bluebird": "^3.5.26",
        "@types/convict": "^4.2.1",
        "@types/debug": "^4.1.4",
        "@types/elasticsearch": "^5.0.32",
        "@types/fs-extra": "^7.0.0",
        "@types/jest": "^24.0.11",
        "@types/lodash": "^4.14.126",
        "@types/lodash.clonedeep": "^4.5.6",
        "@types/nanoid": "^1.2.1",
        "@types/node": "^12.0.1",
        "@types/socket.io": "^2.1.2",
        "@types/socket.io-client": "^1.4.32",
        "@types/uuid": "^3.4.4",
        "eslint": "^5.16.0",
        "eslint-config-airbnb-base": "^13.1.0",
        "eslint-plugin-import": "^2.17.2",
        "fs-extra": "^8.0.1",
        "jest": "^24.7.1",
        "jest-extended": "^0.11.1",
        "lerna": "^3.13.4",
        "lerna-alias": "^3.0.2",
        "markdown-table": "^1.1.3",
        "semver": "^6.0.0",
        "ts-jest": "^24.0.2",
        "tslint": "^5.16.0",
        "tslint-config-airbnb": "^5.11.1",
        "typescript": "^3.4.5"
    },
    "workspaces": [
        "packages/*",
        "e2e"
    ]
}

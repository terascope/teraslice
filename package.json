{
    "name": "teraslice-workspace",
    "private": true,
    "scripts": {
        "start": "node service.js",
        "setup": "yarn build:cleanup dist && lerna bootstrap --force-local && yarn build",
        "cleanup": "./scripts/cleanup.sh",
        "prebuild": "lerna run prebuild",
        "build": "tsc --build --pretty",
        "build:cleanup": "./scripts/build-cleanup.sh",
        "build:all": "yarn build:cleanup && env FORCE_COLOR=1 lerna run build",
        "build:pkg": "./scripts/build-pkg.sh",
        "build:watch": "yarn run build --watch",
        "benchmark": "lerna run --concurrency=1 --no-prefix --stream benchmark",
        "sync": "ts-scripts sync",
        "docs": "ts-scripts docs",
        "bump": "ts-scripts bump",
        "test": "jest --silent --forceExit",
        "test:debug": "jest --colors --coverage=false --detectOpenHandles --runInBand  --forceExit $JEST_ARGS",
        "test:watch": "jest --coverage=false --notify --onlyChanged --watch",
        "test:e2e": "yarn --cwd ./e2e test",
        "lint": "env FORCE_COLOR=1 lerna run lint --no-bail && yarn lint:docs",
        "lint:docs": "markdownlint docs/*.md docs/**/*.md docs/**/**/*.md packages/*/*.md README.md || echo '* lint:docs failed but it's okay",
        "lint:fix": "env FORCE_COLOR=1 lerna run lint:fix --no-bail"
    },
    "displayName": "Teraslice",
    "homepage": "https://github.com/terascope/teraslice",
    "documentation": "https://terascope.github.io/teraslice",
    "dependencies": {},
    "bugs": {
        "url": "https://github.com/terascope/teraslice/issues"
    },
    "devDependencies": {
        "@types/bluebird": "^3.5.27",
        "@types/convict": "^4.2.1",
        "@types/debug": "^4.1.4",
        "@types/elasticsearch": "^5.0.34",
        "@types/fs-extra": "^8.0.0",
        "@types/jest": "^24.0.14",
        "@types/lodash": "^4.14.134",
        "@types/lodash.clonedeep": "^4.5.6",
        "@types/nanoid": "^2.0.0",
        "@types/node": "^12.0.8",
        "@types/socket.io": "^2.1.2",
        "@types/socket.io-client": "^1.4.32",
        "@types/uuid": "^3.4.4",
        "eslint": "^5.16.0",
        "eslint-config-airbnb-base": "^13.1.0",
        "eslint-plugin-import": "^2.17.3",
        "fs-extra": "^8.0.1",
        "jest": "^24.8.0",
        "jest-extended": "^0.11.1",
        "jest-watch-typeahead": "^0.3.1",
        "lerna": "^3.15.0",
        "lerna-alias": "^3.0.2",
        "markdown-table": "^1.1.3",
        "markdownlint": "^0.15.0",
        "markdownlint-cli": "^0.17.0",
        "pkg-up": "^3.1.0",
        "semver": "^6.1.1",
        "ts-jest": "^24.0.2",
        "tslint": "^5.18.0",
        "tslint-config-airbnb": "^5.11.1",
        "typescript": "^3.5.2"
    },
    "workspaces": [
        "packages/*",
        "e2e"
    ]
}

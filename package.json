{
    "name": "teraslice-workspace",
    "private": true,
    "scripts": {
        "start": "node service.js",
        "setup": "yarn bootstrap && yarn build",
        "bootstrap:prod": "lerna bootstrap -- --production=true --link-duplicates --ignore-optional",
        "bootstrap": "lerna bootstrap --force-local",
        "clean": "tsc --build --clean",
        "build:prod": "lerna link --force-local && lerna run build",
        "build": "lerna run build:prepare && tsc --build --pretty",
        "build:watch": "yarn run build --watch",
        "bump": "./scripts/bump.js",
        "benchmark": "lerna run benchmark",
        "test": "jest --ci --cache --silent --maxWorkers=4 --detectOpenHandles --forceExit",
        "test:debug": "jest --colors --coverage=false --detectOpenHandles --runInBand  --forceExit $JEST_ARGS",
        "test:ci": "yarn test",
        "test:watch": "jest --coverage=false --notify --onlyChanged --watch",
        "test:e2e": "yarn --cwd ./e2e test",
        "test:e2e:ci": "yarn --cwd ./e2e test:ci",
        "test:e2e:clean": "yarn --cwd ./e2e clean",
        "test:e2e:logs": "yarn --cwd ./e2e logs",
        "lint": "env FORCE_COLOR=1 lerna run lint",
        "lint:fix": "env FORCE_COLOR=1 lerna run lint:fix"
    },
    "dependencies": {},
    "devDependencies": {
        "@types/bluebird": "^3.5.26",
        "@types/convict": "^4.2.1",
        "@types/debug": "^4.1.2",
        "@types/elasticsearch": "^5.0.31",
        "@types/fs-extra": "^5.0.5",
        "@types/jest": "^24.0.9",
        "@types/lodash": "^4.14.122",
        "@types/lodash.clonedeep": "^4.5.6",
        "@types/nanoid": "^1.2.1",
        "@types/node": "^11.10.5",
        "@types/socket.io": "^2.1.2",
        "@types/socket.io-client": "^1.4.32",
        "@types/uuid": "^3.4.4",
        "eslint": "^5.15.1",
        "eslint-config-airbnb-base": "^13.1.0",
        "eslint-plugin-import": "^2.16.0",
        "fs-extra": "^7.0.1",
        "jest": "^24.3.1",
        "jest-extended": "^0.11.1",
        "jest-haste-map": "^24.3.1",
        "jest-resolve": "^24.3.1",
        "lerna": "^3.13.1",
        "lerna-alias": "^3.0.2",
        "markdown-table": "^1.1.2",
        "semver": "^5.6.0",
        "ts-jest": "^24.0.0",
        "tslint": "^5.13.1",
        "tslint-config-airbnb": "^5.11.1",
        "typescript": "^3.3.3333"
    },
    "workspaces": [
        "packages/*",
        "e2e"
    ]
}

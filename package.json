{
    "name": "teraslice-workspace",
    "private": true,
    "homepage": "https://github.com/terascope/teraslice",
    "bugs": {
        "url": "https://github.com/terascope/teraslice/issues"
    },
    "workspaces": [
        "packages/*",
        "e2e"
    ],
    "scripts": {
        "benchmark": "lerna run --concurrency=1 --no-prefix --stream benchmark",
        "prebuild": "lerna run prebuild",
        "build": "tsc --build",
        "build:all": "yarn build:cleanup && env FORCE_COLOR=1 lerna run build",
        "build:cleanup": "./scripts/build-cleanup.sh",
        "build:pkg": "./scripts/build-pkg.sh",
        "build:watch": "yarn run build --watch",
        "bump": "ts-scripts bump",
        "cleanup": "./scripts/cleanup.sh",
        "docs": "ts-scripts docs",
        "lint": "yarn lint:es && yarn sync --verify",
        "lint:es": "eslint --cache --ext .js,.jsx,.ts,.tsx .",
        "lint:fix": "yarn lint:es --fix && yarn sync",
        "setup": "lerna bootstrap --force-local && yarn build:cleanup dist && yarn build",
        "start": "node service.js",
        "sync": "ts-scripts sync",
        "test": "ts-scripts test"
    },
    "dependencies": {},
    "devDependencies": {
        "@types/bluebird": "^3.5.27",
        "@types/convict": "^4.2.1",
        "@types/elasticsearch": "^5.0.34",
        "@types/fs-extra": "^8.0.0",
        "@types/jest": "^24.0.18",
        "@types/lodash": "^4.14.137",
        "@types/lodash.clonedeep": "^4.5.6",
        "@types/nanoid": "^2.0.0",
        "@types/node": "^12.7.2",
        "@types/uuid": "^3.4.4",
        "eslint": "^6.2.2",
        "jest": "^24.9.0",
        "jest-extended": "^0.11.2",
        "jest-watch-typeahead": "^0.4.0",
        "lerna": "^3.16.4",
        "lerna-alias": "^3.0.2",
        "ts-jest": "^24.0.2",
        "typescript": "^3.5.3"
    },
    "engines": {
        "node": ">=8.16.0",
        "yarn": ">=1.16.0"
    },
    "os": [
        "darwin",
        "linux"
    ],
    "displayName": "Teraslice",
    "documentation": "https://terascope.github.io/teraslice",
    "terascope": {
        "root": true,
        "type": "monorepo",
        "docker": {
            "registry": "terascope/teraslice",
            "cache_layers": [
                {
                    "from": "node:10.16.3-alpine",
                    "name": "base"
                },
                {
                    "from": "base",
                    "name": "connectors"
                }
            ]
        }
    }
}

{
    "name": "teraslice-workspace",
    "private": true,
    "scripts": {
        "start": "node service.js",
        "setup": "lerna bootstrap --force-local && yarn build:cleanup dist && yarn build",
        "cleanup": "./scripts/cleanup.sh",
        "prebuild": "lerna run prebuild",
        "build": "tsc --build --pretty",
        "build:cleanup": "./scripts/build-cleanup.sh",
        "build:all": "yarn build:cleanup && env FORCE_COLOR=1 lerna run build",
        "build:pkg": "./scripts/build-pkg.sh",
        "build:watch": "yarn run build --watch",
        "benchmark": "lerna run --concurrency=1 --no-prefix --stream benchmark",
        "sync": "ts-scripts sync",
        "docs": "ts-scripts docs",
        "bump": "ts-scripts bump",
        "test": "ts-scripts test",
        "lint": "yarn lint:js && yarn lint:ts --parallel && yarn sync --verify",
        "lint:js": "eslint *.js packages/*/*.js packages/*/lib/**/*.js packages/*/test/**/*.js packages/*/cmds/**/*.js",
        "lint:ts": "env FORCE_COLOR=1 lerna run lint --no-bail",
        "lint:fix": "yarn lint:js:fix && yarn lint:ts:fix && yarn sync",
        "lint:js:fix": "yarn lint:js --fix",
        "lint:ts:fix": "env FORCE_COLOR=1 lerna run lint:fix --no-bail"
    },
    "displayName": "Teraslice",
    "homepage": "https://github.com/terascope/teraslice",
    "documentation": "https://terascope.github.io/teraslice",
    "dependencies": {},
    "bugs": {
        "url": "https://github.com/terascope/teraslice/issues"
    },
    "devDependencies": {
        "@types/bluebird": "^3.5.27",
        "@types/convict": "^4.2.1",
        "@types/debug": "^4.1.4",
        "@types/elasticsearch": "^5.0.34",
        "@types/fs-extra": "^8.0.0",
        "@types/jest": "^24.0.17",
        "@types/lodash": "^4.14.134",
        "@types/lodash.clonedeep": "^4.5.6",
        "@types/nanoid": "^2.0.0",
        "@types/node": "^12.0.8",
        "@types/socket.io": "^2.1.2",
        "@types/socket.io-client": "^1.4.32",
        "@types/uuid": "^3.4.4",
        "eslint": "^5.16.0",
        "eslint-config-airbnb-base": "^14.0.0",
        "eslint-plugin-import": "^2.18.2",
        "jest": "^24.8.0",
        "jest-extended": "^0.11.2",
        "jest-watch-typeahead": "^0.3.1",
        "lerna": "^3.16.4",
        "lerna-alias": "^3.0.2",
        "ts-jest": "^24.0.2",
        "tslint": "^5.18.0",
        "tslint-config-airbnb": "^5.11.1",
        "typescript": "^3.5.3"
    },
    "workspaces": [
        "packages/*",
        "e2e"
    ],
    "terascope": {
        "root": true,
        "type": "monorepo",
        "docker": {
            "registry": "terascope/teraslice",
            "cache_layers": [
                {
                    "from": "node:10.16.1-alpine",
                    "name": "base"
                },
                {
                    "from": "base",
                    "name": "connectors"
                }
            ]
        }
    },
    "engines" : {
        "node" : ">=8.16.0",
        "yarn" : ">=1.16.0"
    },
    "os" : [ "darwin", "linux" ]
}

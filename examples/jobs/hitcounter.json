{
    "name": "Hit Counter",
    "lifecycle": "persistent",
    "workers": 2,
    "operations": [
        {
          "_op": "elasticsearch_reader",
          "index": "example-logs",
          "size": 10000,
          "interval": "10s",
          "delay": "30s",
          "date_field_name": "created",
          "full_response": false
        },
        {
          "_op": "summarize"
        },
        {
            "_op": "elasticsearch_index_selector",
            "type": "change",
            "index": "hitcounts",
            "id_field": "_key"
        },
        {
          "_op": "elasticsearch_bulk",
          "size": 100
        }
    ]
}
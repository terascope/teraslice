{
    "name": "Kafka Reader",
    "lifecycle": "persistent",
    "workers": 1,
    "analytics": true,
    "assets": ["kafka", "elasticsearch"],
    "max_retries": 0,
    "operations": [
        {
            "_op": "kafka_reader",
            "connection": "default",
            "topic": "example-logs-1000",
            "group": "example-kafka-group",
            "size": 300,
            "wait": 500,
            "_encoding": "json"
        },
        {
            "_op": "elasticsearch_index_selector",
            "type": "events",
            "index": "kafka-logs-1000",
            "preserve_id": true
        },
        {
            "_op": "elasticsearch_bulk",
            "size": 500
        }
    ]
}

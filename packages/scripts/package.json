{
    "name": "@terascope/scripts",
    "version": "0.1.0",
    "description": "A collection of terascope monorepo scripts",
    "homepage": "https://github.com/terascope/teraslice/tree/master/packages/scripts#readme",
    "bugs": {
        "url": "https://github.com/terascope/teraslice/issues"
    },
    "repository": "git@github.com:terascope/teraslice.git",
    "license": "MIT",
    "author": "Terascope, LLC <info@terascope.io>",
    "files": [
        "dist/src/**/*",
        "bin/*"
    ],
    "main": "dist/src/index.js",
    "typings": "dist/src/index.d.ts",
    "bin": {
        "ts-scripts": "./bin/ts-scripts.js"
    },
    "scripts": {
        "prebuild": "./scripts/build-typedoc.js",
        "build": "tsc --build --pretty",
        "build:watch": "yarn build --watch",
        "lint": "tslint -p tsconfig.json -t verbose -e '**/*.json'",
        "lint:fix": "yarn lint --fix",
        "prepublishOnly": "yarn build",
        "test": "jest",
        "test:debug": "env DEBUG='*teraslice*' jest --detectOpenHandles --coverage=false --runInBand",
        "test:watch": "jest --coverage=false --notify --watch --onlyChanged"
    },
    "dependencies": {
        "@lerna/query-graph": "^3.14.0",
        "execa": "^2.0.2",
        "fs-extra": "^8.0.1",
        "lodash": "^4.17.11",
        "markdown-table": "^1.1.3",
        "pkg-up": "^3.1.0",
        "semver": "^6.1.1",
        "sort-package-json": "^1.22.1",
        "typedoc": "TypeStrong/typedoc#07afa11",
        "typedoc-plugin-markdown": "^2.0.7",
        "yargs": "^13.2.4"
    },
    "devDependencies": {
        "@types/lodash": "^4.14.135",
        "@types/semver": "^6.0.1"
    },
    "publishConfig": {
        "access": "public"
    },
    "displayName": "Scripts",
    "srcMain": "src/index.ts",
    "terascope": {
        "enableTypedoc": false
    }
}

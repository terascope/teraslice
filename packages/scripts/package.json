    },
    "resolutions": {
        "ms": "^2.1.3",
        "typescript": "~4.3.5"
    },
    "dependencies": {
        "@lerna/query-graph": "^4.0.0",
        "@terascope/utils": "^0.40.6",
        "codecov": "^3.8.3",
        "execa": "^5.1.0",
        "fs-extra": "^9.1.0",
        "globby": "^11.0.4",
        "got": "^11.8.2",
        "ip": "^1.1.5",
        "lodash": "^4.17.21",
        "micromatch": "^4.0.4",
        "ms": "^2.1.3",
        "package-json": "^7.0.0",
        "pkg-up": "^3.1.0",
        "semver": "^7.3.5",
        "signale": "^1.4.0",
        "sort-package-json": "~1.50.0",
        "typedoc": "^0.21.5",
